<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - وب سایت خبری</title>
    @Styles.Render("~/Content/bootstrap-rtl.css", "~/Content/Custom.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Test/Index">
                    <img src="~/Content/Images/logo.png" height="20" width="20">
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">دسته بندی اخبار <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" id="myTab">
                            <li role="presentation"><a href="#xxxxx" aria-controls="xxxxx" role="tab" data-toggle="tab">xxxxxxxx</a></li>
                            <li class="divider"></li>
                            <li role="presentation"><a href="#yyyyy" aria-controls="yyyyyy" role="tab" data-toggle="tab">yyyyyyyy</a></li>
                            <li class="divider"></li>
                            <li role="presentation"><a href="#zzzzz" aria-controls="zzzzz" role="tab" data-toggle="tab">zzzzzzzz</a></li>
                        </ul>

                    </li>
                    <li><a href="#">تقویم</a></li>
                    <li><a href="#">گالری</a></li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <button type="submit" class="btn btn-default fa fa-search form-control"></button>
                    </div>
                </form>

                @if (Session["UserId"] != null)
                {

                    <ul class="nav navbar-nav navbar-left pull-left">
                        <li><a href="#">خوش آمدید :@Session["UserName"]  </a></li>
                        <li><a href="#">خروج</a></li>

                    </ul>

                }
                else
                {
                    <ul class="nav navbar-nav navbar-left ">
                        <li><a href="#">ورود</a></li>
                        <li><a href="#">ثبت نام</a></li>

                    </ul>

                }

                }

            </div>
        </div>

    </nav>

    <div class="panel-body" style="min-height:450px">

        @RenderBody()


    </div>

    <footer class="well" style="background-color:#000000;color:wheat;margin-bottom:0px">

        <div class="col-lg-4" style="margin-left:20px">

            <h3><span class="fa fa-newspaper-o"></span> دسته بندی اخبار</h3>
            <ul class="list-group list-unstyled">

                <li>xxxxxxx</li>
                <li>yyyyyyy</li>
                <li>zzzzzzz</li>
            </ul>
        </div>

        <div class="col-lg-4">

            <h3><span class="fa fa-users"></span> ارتباط با ما</h3>
            <div class="col-md-2">
                <ul class="list-group list-unstyled">

                    <li><span class="fa fa-instagram"></span><a href="#"></a></li>
                    <li><span class="fa fa-telegram"></span><a href="#"></a></li>
                    <li><span class="fa fa-facebook"></span><a href="#"></a> </li>

                </ul>
            </div>
            <div class="col-md-2">
                <ul class="list-group list-unstyled">

                    <li><span class="fa fa-google-plus"></span><a href="#"></a> </li>
                    <li><span class="fa fa-twitter"></span><a href="#"></a></li>
                    <li><span class="fa fa-linkedin"></span><a href="#"></a> </li>

                </ul>
            </div>
        </div>

        <div class="col-lg-3">

            <h3><span class="glyphicon glyphicon-briefcase"></span> ------------- </h3>
            <ul class="list-group list-unstyled">

                <li><span class="glyphicon glyphicon-music"></span> <a href="#">------------</a> </li>
                <li><span class="glyphicon glyphicon-book"></span>  <a href="#">------------</a></li>
                <li><span class="glyphicon glyphicon-globe"></span> <a href="#">------------</a></li>

            </ul>
        </div>

        <div style="clear:both"></div>


    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")



</body>
</html>
